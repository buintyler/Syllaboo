# ── Mobile app (Expo) ── EXPO_PUBLIC_ prefix required for client access ──────
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=
EXPO_PUBLIC_SUPABASE_URL=
EXPO_PUBLIC_SUPABASE_ANON_KEY=
EXPO_PUBLIC_STT_RELAY_HOST=
EXPO_PUBLIC_REVENUECAT_API_KEY=

# ── Server (stt-relay) ────────────────────────────────────────────────────────
STT_PROVIDER=mock                  # assemblyai | deepgram | mock
ASSEMBLYAI_API_KEY=
DEEPGRAM_API_KEY=
STT_CONFIDENCE_THRESHOLD=0.70
STT_SAMPLE_RATE=16000
STT_LANGUAGE=en-US

# ── Supabase (server-only) ────────────────────────────────────────────────────
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=         # NEVER expose to client

# ── Clerk (server-only) ───────────────────────────────────────────────────────
CLERK_SECRET_KEY=                  # NEVER expose to client

# ── Inngest ───────────────────────────────────────────────────────────────────
INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=

# ── Environment ───────────────────────────────────────────────────────────────
NODE_ENV=development
